<% card.members.each do |user| %>
  <%# Wrap avatar in a delete form %>
  <%= button_to card_member_path(card, user),
      method: :delete,
      class: "group relative",
      form: { style: "display:inline-block" },
      data: { turbo_confirm: "Remove #{user.email} from this card?" } do %>

    <div class="h-6 w-6 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-[10px] font-bold border border-white ring-1 ring-white cursor-pointer hover:bg-red-100 hover:text-red-600 hover:ring-red-200 transition-all" title="Remove <%= user.email %>">
      <%= user.initials %>
    </div>

    <%# Optional: Tiny 'x' badge that appears on hover %>
    <div class="absolute -top-1 -right-1 bg-red-500 text-white rounded-full h-3 w-3 flex items-center justify-center text-[8px] opacity-0 group-hover:opacity-100 transition-opacity">
      <i class="fa-solid fa-xmark"></i>
    </div>

  <% end %>
<% end %>
