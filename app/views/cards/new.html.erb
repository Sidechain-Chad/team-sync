<%= turbo_frame_tag "list_#{@list.id}_new_card" do %>
  <div class="bg-white p-2 rounded shadow-sm border-2 border-blue-500">
    <%= form_with(model: [@list, @card], class: "space-y-2") do |f| %>

      <%= f.text_area :title,
          rows: 2,
          class: "w-full border-gray-300 rounded text-sm focus:ring-blue-500 focus:border-blue-500 p-2",
          placeholder: "Enter a title for this card...",
          autofocus: true %>

      <div class="flex items-center justify-between">
        <%= f.submit "Add Card", class: "bg-blue-600 text-white px-3 py-1 rounded text-xs hover:bg-blue-700 cursor-pointer" %>

        <%= link_to "Cancel", list_path(@list), class: "text-xs text-gray-500 hover:text-gray-700" %>
      </div>

    <% end %>
  </div>
<% end %>
