<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-gray-900/50 z-50 flex items-center justify-center p-4 backdrop-blur-sm"
       onclick="this.closest('turbo-frame').src = ''; this.closest('turbo-frame').innerHTML = ''">

    <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl max-h-[90vh] flex flex-col relative"
         onclick="event.stopPropagation()">

      <button type="button"
              class="absolute top-4 right-4 text-gray-400 hover:text-gray-600"
              onclick="this.closest('turbo-frame').src = ''; this.closest('turbo-frame').innerHTML = ''">
        <i class="fa-solid fa-xmark text-xl"></i>
      </button>

      <div class="p-6 overflow-y-auto">
        <div class="mb-6">
          <h2 class="text-2xl font-bold text-gray-800"><%= @card.title %></h2>
          <div class="text-sm text-gray-500">in list <span class="font-bold"><%= @card.list.name %></span></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="md:col-span-2">
            <h3 class="text-xs font-bold text-gray-500 uppercase mb-2">Description</h3>
            <p class="text-gray-700 text-sm whitespace-pre-wrap"><%= @card.description.presence || "No description provided." %></p>
          </div>

          <div>
             <h3 class="text-xs font-bold text-gray-500 uppercase mb-2">Actions</h3>
             <%= link_to "Edit", edit_card_path(@card), class: "block w-full text-center bg-gray-100 p-2 rounded text-sm mb-2" %>
             <%= button_to "Delete", card_path(@card), method: :delete, class: "block w-full text-center bg-red-50 text-red-600 p-2 rounded text-sm" %>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>
