<%# app/views/cards/edit_description.html.erb %>
<%= turbo_frame_tag dom_id(@card, :description) do %>
  <%= form_with model: @card, url: update_description_card_path(@card), method: :patch, class: "space-y-3" do |f| %>

    <%# The Text Area %>
    <div class="relative">
      <%= f.text_area :description,
          rows: 6,
          class: "w-full p-3 text-sm text-gray-700 border-2 border-blue-500 rounded-md focus:ring-0 focus:border-blue-500 bg-white shadow-sm resize-y",
          placeholder: "Add a more detailed description...",
          autofocus: true
      %>
    </div>

    <%# The Toolbar %>
    <div class="flex items-center gap-2">
      <%= f.submit "Save", class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium px-4 py-1.5 rounded transition-colors cursor-pointer" %>

      <%# Cancel Button %>
      <%# Clicking this requests the 'show' page. Turbo extracts the read-only frame from it. %>
      <%= link_to "Cancel", card_path(@card), class: "text-gray-500 hover:text-gray-700 text-sm px-3 py-1.5 hover:bg-gray-100 rounded transition-colors" %>
    </div>

  <% end %>
<% end %>
