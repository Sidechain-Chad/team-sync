<%# 1. FIRST: Remove from 'Assigned' (Top) to avoid ID conflicts %>
<%= turbo_stream.remove "member_row_#{@user.id}" %>

<%# 2. SECOND: Add back to 'Available' (Bottom) %>
<%= turbo_stream.prepend "available_members_list" do %>
  <%= render "cards/member_row", card: @card, user: @user, assigned: false %>
<% end %>

<%# 3. Update Avatars %>
<%= turbo_stream.update "card_face_avatars_#{@card.id}" do %>
  <%= render "cards/avatars", card: @card %>
<% end %>
