<%= turbo_frame_tag dom_id(list, :header) do %>
  <div class="flex justify-between items-center mb-2 handle cursor-grab hover:bg-gray-200 rounded py-1 px-2 transition group">

    <%# 1. The Title (Clicking it activates Edit Mode) %>
    <div class="flex-1">
      <%= link_to list.name, edit_list_path(list), class: "font-bold text-gray-700 block w-full", style: "text-decoration: none;" %>
    </div>

    <%# 2. The Delete Button (Only visible on hover) %>
    <div class="opacity-0 group-hover:opacity-100 transition">
      <%= button_to list_path(list), method: :delete, class: "text-gray-400 hover:text-red-500 bg-transparent border-0 cursor-pointer p-1", form: { style: "display:inline-block;" }, data: { turbo_confirm: "Delete this list?" } do %>
        <i class="fa-solid fa-trash text-xs"></i>
      <% end %>
    </div>

  </div>
<% end %>
