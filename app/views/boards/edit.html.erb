<div class="max-w-md mx-auto py-10 px-4">
  <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">

    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-bold text-gray-800">Board Settings</h2>
      <%= link_to "Cancel", root_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
    </div>

    <%= form_with(model: @board, class: "space-y-4") do |f| %>

      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Board Logo / Avatar</label>
        <div class="flex items-center space-x-4">
          <% if @board.avatar.attached? %>
             <%= image_tag @board.avatar, class: "h-16 w-16 rounded object-cover border" %>
          <% end %>
          <%= f.file_field :avatar, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        </div>
      </div>

      <div class="pt-4 border-t border-gray-100 flex justify-between items-center mt-6">
        <%= link_to "Delete Board", board_path(@board), data: { turbo_method: :delete, turbo_confirm: "Delete this entire board and all cards?" }, class: "text-red-500 text-sm hover:text-red-700" %>

        <%= f.submit "Save Changes", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 cursor-pointer" %>
      </div>

    <% end %>
  </div>

  <hr class="my-8 border-gray-200">

  <div>
    <h3 class="text-lg font-bold text-gray-800 mb-4">Team Members</h3>

    <div class="bg-gray-50 p-4 rounded-lg mb-6">
      <%= form_with url: board_board_users_path(@board), method: :post, class: "flex gap-2" do |f| %>
        <%= f.email_field :email, placeholder: "teammate@example.com", class: "flex-1 border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
        <%= f.submit "Invite", class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 cursor-pointer" %>
      <% end %>
    </div>

    <div class="space-y-3">
      <% @board.board_users.includes(:user).each do |membership| %>
        <% member = membership.user %>

        <div class="flex justify-between items-center bg-white p-3 border rounded shadow-sm">
          <div class="flex items-center space-x-3">

            <div class="h-10 w-10 shrink-0 rounded-full bg-blue-600 flex items-center justify-center text-white text-sm font-bold border-2 border-white shadow-sm ring-2 ring-gray-100">
              <%= member.initials %>
            </div>

            <div class="flex flex-col">
              <span class="text-sm font-bold text-gray-900 leading-none"><%= member.name.presence || "User" %></span>
              <span class="text-xs text-gray-500 mt-1"><%= member.email %></span>
            </div>
          </div>

          <% if member != current_user %>
            <%= button_to "Remove", board_board_user_path(@board, membership), method: :delete, class: "text-red-500 text-xs hover:text-red-700 border border-red-200 hover:bg-red-50 px-3 py-1 rounded transition" %>
          <% else %>
             <span class="text-xs text-gray-400 italic px-3 py-1">Owner</span>
          <% end %>
        </div>
      <% end %>

      <% if @board.board_users.empty? %>
        <p class="text-sm text-gray-500 italic">No members yet.</p>
      <% end %>
    </div>
  </div>

</div>
