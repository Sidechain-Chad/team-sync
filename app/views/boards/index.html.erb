<div class="max-w-5xl mx-auto py-10 px-4">

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">My Workspaces</h1>
    <%= link_to "New Board", new_board_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 font-medium transition" %>
  </div>

  <h2 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">Created by me</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mb-10">

    <%= link_to new_board_path, class: "group block h-40 border-2 border-dashed border-gray-300 rounded-lg flex flex-col items-center justify-center hover:border-blue-500 hover:bg-blue-50 transition" do %>
      <div class="h-10 w-10 rounded-full bg-gray-100 group-hover:bg-blue-100 flex items-center justify-center mb-2 transition">
        <i class="fa-solid fa-plus text-gray-400 group-hover:text-blue-600"></i>
      </div>
      <span class="text-gray-500 font-medium group-hover:text-blue-700">Create new board</span>
    <% end %>

    <% @created_boards.each do |board| %>
      <%= render "board_card", board: board %>
    <% end %>
  </div>

  <% if @shared_boards.present? %>
    <h2 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">Guest Workspaces</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% @shared_boards.each do |board| %>
        <%= render "board_card", board: board %>
      <% end %>
    </div>
  <% end %>

</div>
